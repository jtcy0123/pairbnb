<div class="container">
  <%= form_for @user do |form| %>
    <div class="form-group">
      <%= form.label :first_name, class: "control-label col-sm-2"  %>
      <%= form.text_field :first_name, type: 'first_name', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :last_name, class: "control-label col-sm-2"  %>
      <%= form.text_field :last_name, type: 'last_name', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :email, class: "control-label col-sm-2"  %>
      <%= form.text_field :email, type: 'email', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :photo, class: "control-label col-sm-2"  %>
      <%= form.file_field :photo %>
    </div>
    <div class="form-group">
      <%= form.submit %>
    </div>
  <% end %>
</div>