<style>
  #datepicker1, #datepicker2 {
  border: none;
  }
  select {
  border-color: #ddd;
  background-color: #fff;
  }
  td {
  background-color: #fff;
  }
</style>
<div class="row">
  <div class="col-md-4 col-md-offset-4 col-xs-4 col-xs-offset-4">
    <% if @house.photos != [] %>
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <%= image_tag @house.photos[0].url, style: "width: 100%" %>
          </div>
          <div class="item">
            <%= image_tag @house.photos[-1].url, style: "width: 100%" %>
          </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">
    <h1 class="text-center">
      THE HOUSE
    </h1>
    <h3 class="text-center">
      <%= @house.name %> @ <%= @house.location %>, <%= @house.city %>
    </h3>
  </div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-offset-8 col-xs-8">
    <div class="col-md-4 col-xs-4">
      <h1 class="text-center">
        Guest Number
      </h1>
      <h3 class="text-center">
        <%= @house.pax_num %>
      </h3>
    </div>
    <div class="col-md-4 col-xs-4">
      <br>
      <h1 class="text-center">
        Price
      </h1>
      <h3 class="text-center">
        RM <%= @house.price %> /night
      </h3>
    </div>
    <div class="col-md-4 col-xs-4">
      <h1 class="text-center">
        Tags
      </h1>
      <h3 class="text-center">
        <%= @house.tag_list %>
      </h3>
    </div>
  </div>
</div>
<% if signed_in? %>
  <% if current_user.role != "admin" %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-8">
        <h1 class="text-center">
          <button class='btn-lg' data-toggle="modal" data-target="#bookModal">BOOK</button>
        </h1>
      </div>
    </div>
  <% end %>
<% end %>
<!-- Modal -->
<div class="modal fade" id="bookModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">RESERVATION</h4>
      </div>
      <div class="modal-body" style="text-align: center;">
        <%= form_for [@house, @reservation] do |form| %>
          <table style="width: 30%;" align="center">
            <tr>
              <th>Check In</th>
              <th>Check Out</th>
            </tr>
            <tr>
              <td><%= form.text_field :checkin, type: 'checkin', placeholder: 'dd-mm-yyyy', id: "datepicker1", required: true %></td>
              <td><%= form.text_field :checkout, type: 'checkout', placeholder: 'dd-mm-yyyy', id: 'datepicker2', required: true %></td>
            </tr>
            <tr>
              <th colspan=2 style="text-align: center;">Guest</th>
            </tr>
            <tr>
              <td colspan=2 style="text-align: center;"><%= form.select :guest_num, (1..10).to_a %> guest(s)</td>
            </tr>
          </table>
          <%= form.hidden_field :user_id, value: current_user.id %>
          <%= form.hidden_field :listing_id, value: @house.id %><br>
          <%= form.submit "BOOK", class: 'btn' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>