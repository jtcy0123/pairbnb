<div class="form-group">
  <%= form.label :name, class: "control-label col-sm-1" %>
  <%= form.text_field :name, type: 'name', class: "form-control" %>
</div>
<div class="form-group">
  <%= form.label :location, class: "control-label col-sm-1" %>
  <%= form.text_field :location, type: 'location', class: "form-control" %>
</div>
<div class="form-group">
  <%= form.label :city, class: "control-label col-sm-1" %>
  <%= form.text_field :city, type: 'city', class: "form-control" %>
</div>
<div class="form-group">
  <%= form.label :pax_num, class: "control-label col-sm-1" %>
  <%= form.text_field :pax_num, type: 'pax_num', class: "form-control" %>
</div>
<div class="form-group">
  <%= form.label :price, class: "control-label col-sm-1" %>
  <%= form.text_field :price, type: 'price', class: "form-control" %>
</div>
<div class="form-group">
  <%= form.label :tags, class: "control-label col-sm-1" %>
  <%= form.check_box :tag_list, {:multiple => true}, "smoking", nil %>Smoking&emsp;
  <%= form.check_box :tag_list, {:multiple => true}, "no smoking", nil %>No Smoking&emsp;
  <%= form.check_box :tag_list, {:multiple => true}, "pets", nil %>Pets
</div>
<div class="form-group">
  <%= form.label :photos, class: "control-label col-sm-2" %>
  <%= form.file_field :photos, :multiple => true %>
</div>
<%= form.hidden_field :user_id, :value => current_user.id %>
<div class="form-group">
  <%= form.submit class: "btn btn-lg" %>
</div>